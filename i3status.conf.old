general {
        colors = true
        interval = 1
}

order += "disk /"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "run_watch DHCP"
order += "wireless wlan0"
order += "ethernet eth0"
order += "volume master"
order += "battery 0"
order += "time"

cpu_usage {
          format = "CPU: %usage" }

wireless wlan0 {
        format_up = "wlan0: %quality [%ip]"
        format_down = " " }

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "eth0: [%ip]"
        format_down = " " }

battery 0 {
        format = "%status %percentage" }

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid" }

time {
        format = "%Y-%m-%d %H:%M" }

disk "/" {
        format = "HDD: %free" }
	#format = "%percentage_free" 

cpu_temperature 0 {
        format = "%degrees °C" }

volume master {
        format = "♪: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0 }